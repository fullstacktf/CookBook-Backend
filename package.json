{
  "name": "cookbook",
  "version": "1.0.0",
  "description": "Back-end and db for chefs4 web application",
  "main": "build/server.js",
  "scripts": {
    "ts": "tsc -p .",
    "clean": "rm -rf build",
    "server": "node build/server.js",
    "dev": "nodemon app/server.ts",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.3.0",
    "fs-extra": "^8.1.0",
    "gravatar": "^1.8.0",
    "jwt-simple": "^0.5.6",
    "moment": "^2.24.0",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/mongoose": "^5.5.32",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.12.14",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "babel-jest": "^24.9.0",
    "eslint": "^6.7.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "moduleDirectories": [
      "./node_modules",
      "./app"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "mjs"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx|mjs)?$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/app/**/?(*.)(spec|test).(mj|j|t)s?(x)"
    ]
  },
  "browserslist": [
    "defaults",
    "not ie < 11",
    "last 2 versions",
    "> 1%",
    "iOS 7",
    "last 3 iOS versions"
  ]
}